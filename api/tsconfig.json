{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "lib": [
      "es6"
    ],
    "moduleResolution": "node",
    "noImplicitAny": false,
    "paths": {
      "/opt/nodejs/*": [
        "./src/commons/*"
      ],
      "@usecases/*": [
        "./src/usecases/*"
      ]
    },
    "rootDirs": [
      "src",
    ],
    "resolveJsonModule": true,
    "sourceMap": true
  }
}
