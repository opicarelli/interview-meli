{
  "compilerOptions": {
    "target": "es2020",
    "strict": true,
    "preserveConstEnums": true,
    "noEmit": false,
    "sourceMap": false,
    "module": "commonJS",
    "moduleResolution": "node",
    "paths": {
      "/opt/nodejs/*": ["./*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "outDir": "./dist"
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}